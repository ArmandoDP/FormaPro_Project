---
const testimonials = [
  {
    quote: `"Quick and reliable plumbing fix!"`,
    text: "I had a leaking faucet that was driving me crazy. Handyman arrived on time and fixed it in no time! Their service was professional, and I haven't had any issues since. Highly recommended!",
    author: "John P.",
    location: "San Francisco, CA",
  },
  {
    quote: `"Incredible service!"`,
    text: "Friendly, fast and professional. I will definitely call them again for future repairs.",
    author: "Maria L.",
    location: "Los Angeles, CA",
  },
  {
    quote: `"Highly skilled team!"`,
    text: "They solved a major plumbing issue in less than an hour. Amazing experience!",
    author: "David R.",
    location: "San Diego, CA",
  }
];
---

<script>
    import { register } from 'swiper/element/bundle';
    register();
</script>

<section class="w-full bg-[#f0f6ff] py-16 sm:py-20 lg:py-24">

    <div class="text-center mb-10 sm:mb-14 lg:mb-16 px-4">
        <h5 class="text-[#ea734a] font-semibold tracking-wide text-sm sm:text-base">TESTIMONIALS</h5>
        <h2 class="mt-2 text-2xl sm:text-3xl lg:text-4xl font-bold text-neutral-900">What Our Clients Say</h2>
    </div>

    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-10">

        <swiper-container
            navigation="true"
            pagination="true"
            loop="true"
            autoplay-delay="6000"
            autoplay-disable-on-interaction="false"
            space-between="30"
            slides-per-view="1"
            speed="900"
            class="pb-10"
            style="--swiper-navigation-color:#ea734a; --swiper-theme-color:#ea734a; --swiper-pagination-color:#ea734a;"
        >
            {testimonials.map((t) => (
                <swiper-slide>
                    <div class="bg-white rounded-2xl shadow-lg text-center mx-auto max-w-3xl
                                p-6 sm:p-10 lg:p-14">

                        <!-- QUOTE -->
                        <p class="text-lg sm:text-xl lg:text-2xl font-semibold mb-4">
                        {t.quote}
                        </p>

                        <!-- TEXT -->
                        <p class="text-neutral-600 leading-relaxed mb-6 text-sm sm:text-base">
                        {t.text}
                        </p>

                        <!-- AUTHOR -->
                        <p class="font-semibold text-sm sm:text-base">
                        {t.author}
                        </p>

                        <!-- LOCATION -->
                        <p class="text-[#ea734a] text-sm">
                        {t.location}
                        </p>

                    </div>
                </swiper-slide>
            ))}
        </swiper-container>

    </div>

</section>

<style>
  /* Botones de navegaci√≥n */
  swiper-container::part(navigation-button-prev),
  swiper-container::part(navigation-button-next) {
    width: 40px;
    height: 40px;
    font-size: 24px;
  }

  /* Desktop: mostrar flechas fuera del card */
  @media (min-width: 1024px) {
    swiper-container::part(navigation-button-prev) {
      left: -70px;
    }

    swiper-container::part(navigation-button-next) {
      right: -70px;
    }
  }

  /* Mobile & Tablet: ocultar flechas */
  @media (max-width: 1023px) {
    swiper-container::part(navigation-button-prev),
    swiper-container::part(navigation-button-next) {
      display: none;
    }
  }
</style>


